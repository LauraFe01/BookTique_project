<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/box_recyclerview">

    <ImageButton
        android:id="@+id/coverSG"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/genere_labelDL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lora_bold_italic"
        android:textColor="@color/gray"
        android:text="Autore"
        app:layout_constraintStart_toEndOf="@+id/coverSG"
        app:layout_constraintTop_toBottomOf="@+id/titoloSG" />

    <TextView
        android:id="@+id/titolo_labelDL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lora_bold_italic"
        android:textColor="@color/gray"
        android:text="Titolo"
        app:layout_constraintEnd_toStartOf="@+id/sendSG"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/coverSG"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/aggiungi_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/lora_bold_italic"
        android:text="Aggiungi"
        android:textColor="@color/red"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.788"
        app:layout_constraintStart_toEndOf="@+id/genere_labelDL"
        app:layout_constraintTop_toBottomOf="@+id/sendSG"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/autoreSG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/gray"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sendSG"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/coverSG"
        app:layout_constraintTop_toBottomOf="@+id/genere_labelDL"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/sendSG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.815"
        app:layout_constraintStart_toEndOf="@+id/genere_labelDL"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/send_icon" />

    <TextView
        android:id="@+id/titoloSG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/gray"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/sendSG"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/coverSG"
        app:layout_constraintTop_toBottomOf="@+id/titolo_labelDL" />

</androidx.constraintlayout.widget.ConstraintLayout>