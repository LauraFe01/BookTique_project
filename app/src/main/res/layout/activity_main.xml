                android:id="@+id/book_leggere6"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="35dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription=""
                android:padding="8dp"
                android:src="@drawable/profile_circle_icon" />


        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="410dp"
        android:layout_height="140dp"
        android:layout_marginTop="43dp"
        android:background="#80FFBF9B"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/book_in_c1"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription=""
            android:padding="8dp"
            android:src="@drawable/profile_circle_icon" />

        <ImageButton
            android:id="@+id/book_in_c2"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="35dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription=""
            android:padding="8dp"
            android:src="@drawable/profile_circle_icon" />

        <ImageButton
            android:id="@+id/book_in_c3"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="35dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription=""
            android:padding="8dp"
            android:src="@drawable/profile_circle_icon" />

        <ImageButton
            android:id="@+id/book_in_c4"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="35dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription=""
