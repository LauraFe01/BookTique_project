<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scopri">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toolbar3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#4D4D4D"
                android:title="Toolbar"
                app:layout_constraintEnd_toEndOf="@+id/button1"
                app:layout_constraintStart_toEndOf="@+id/button1">


                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchView1"
                    android:layout_width="311dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="37dp"
                    android:background="#C6C6C6"
                    android:queryHint="Cerca"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_constraintBottom_toTopOf="@+id/buttonPerte"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/buttonScopri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="13dp"
                    android:backgroundTint="#FFBF9B"
                    android:fontFamily="@font/lora_bold_italic"
                    android:text="SCOPRI"
                    android:textColor="#4D4D4D"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/buttonPerte"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/searchView1"
                    app:layout_constraintVertical_bias="0.733" />

                <Button
                    android:id="@+id/buttonPerte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="#FFBF9B"
                    android:fontFamily="@font/lora_bold_italic"
                    android:text="PER TE"
                    android:textColor="#4D4D4D"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/buttonScopri"
                    app:layout_constraintTop_toBottomOf="@+id/searchView1" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="38dp"
                android:fontFamily="@font/lora_bold_italic"
                android:text="Titolo"
                android:textColor="#4D4D4D"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/book_icon" />

            <LinearLayout
                android:id="@+id/linearL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/box_button_perte"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/si"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/conferma" />

                <ImageButton
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="24dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/scarta" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</layout>